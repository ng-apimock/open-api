{
  "rules": {
    "no-duplicate-imports": true,
    "no-duplicate-variable": true,
    "no-var-keyword": true,
    "semicolon": [
      true
    ],
    "variable-name": [
      true,
      "ban-keywords"
    ],
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "no-inner-declarations": [
      true,
      "function"
    ],
    "ordered-imports": {
      "options": {
        "module-source-path": "full",
        "grouped-imports": true,
        "groups": [
          {
            "name": "dependency injection",
            "match": "^reflect-metadata$",
            "order": 10
          },
          {
            "name": "parent directories",
            "match": "^\\.\\.",
            "order": 30
          },
          {
            "name": "current directory",
            "match": "^\\.",
            "order": 40
          },
          {
            "name": "libraries",
            "match": ".*",
            "order": 20
          }
        ]
      }
    },
    "quotemark": [
      true,
      "single",
      "avoid-template"
    ]
  },
  "rulesDirectory": [
    "node_modules/vrsource-tslint-rules/rules",
    "node_modules/tslint-eslint-rules/dist/rules"
  ]
}
